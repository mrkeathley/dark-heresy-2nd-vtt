<div class="dh-panel dh-grid-col-2 dh-grid-row-4">
    <div class="dh-armour__wrapper">
        <h1 class="dh-panel__header">{{localize 'ARMOUR.ARMOUR_POINTS'}}</h1>
        <div class="dh-armour__row">
            <div class="dh-armour__block--head">
                <div class="dh-armour__roll">
                    01-10
                </div>
                <span class="dh-armour__display">{{actor.armour.head.total}}</span>
                <div class="dh-armour__location">{{localize 'ARMOUR.HEAD'}}</div>
            </div>
            <div class="dh-armour__block--leftarm">
                <div class="dh-armour__roll">
                    21-30
                </div>
                <span class="dh-armour__display">{{actor.armour.leftArm.total}}</span>
                <div class="dh-armour__location">{{localize 'ARMOUR.LEFT_ARM'}}</div>
            </div>
        </div>
        <div class="dh-armour__row">
            <div class="dh-armour__block--rightarm">
                <div class="dh-armour__roll">
                    11-20
                </div>
                <span class="dh-armour__display">{{actor.armour.rightArm.total}}</span>
                <div class="dh-armour__location">{{localize 'ARMOUR.RIGHT_ARM'}}</div>
            </div>
            <div class="dh-armour__block--body">
                <div class="dh-armour__roll">
                    31-70
                </div>
                <span class="dh-armour__display">{{actor.armour.body.total}}</span>
                <div class="dh-armour__location">{{localize 'ARMOUR.BODY'}}</div>
            </div>
        </div>
        <div class="dh-armour__row">
            <div class="dh-armour__block--rightleg">
                <div class="dh-armour__roll">
                    71-85
                </div>
                <span class="dh-armour__display">{{actor.armour.rightLeg.total}}</span>
                <div class="dh-armour__location">{{localize 'ARMOUR.RIGHT_LEG'}}</div>
            </div>
            <div class="dh-armour__block--leftleg">
                <div class="dh-armour__roll">
                    86-100
                </div>
                <span class="dh-armour__display">{{actor.armour.leftLeg.total}}</span>
                <div class="dh-armour__location">{{localize 'ARMOUR.LEFT_LEG'}}</div>
            </div>
        </div>
        <div class="dh-armour__row">
            <div class="dh-armour__block--toughness">
                <div class="dh-armour__roll"></div>
                <span class="dh-armour__display">{{actor.characteristics.toughness.bonus}}</span>
                <div class="dh-armour__location">{{localize 'ARMOUR.TB'}}</div>
            </div>
        </div>
    </div>
</div>
